{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true, // required by tsyringe
    "emitDecoratorMetadata": true, // required by tsyringe
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src/"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "libs"
  ]
}
